<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="?android:colorPrimary"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|start"
                android:text="Animations"
                tools:text="Animations" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/reveal_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/button"
            android:text="TEXT" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_1"
            android:layout_alignParentBottom="true"
            android:src="@drawable/circle_24dp"
            android:tint="#af3" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/square_1"
            android:src="@drawable/circle_24dp"
            android:tint="#3af" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_3"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/square_2"
            android:src="@drawable/circle_24dp"
            android:tint="#bb2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/square_3"
            android:src="@drawable/circle_24dp"
            android:tint="#fbf" />
    </RelativeLayout>

</LinearLayout>
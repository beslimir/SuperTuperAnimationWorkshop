<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reveal_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher_background"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_1"
            android:layout_alignParentBottom="true"
            android:src="@drawable/circle_24dp"
            android:tint="#af3" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/square_1"
            android:src="@drawable/circle_24dp"
            android:tint="#3af" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_3"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/square_2"
            android:src="@drawable/circle_24dp"
            android:tint="#bb2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/square_4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/square_3"
            android:src="@drawable/circle_24dp"
            android:tint="#fbf" />
    </RelativeLayout>

</LinearLayout>